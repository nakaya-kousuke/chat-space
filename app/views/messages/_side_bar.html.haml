.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class:"icon-name-left" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class:"icon-name-right" do
          = icon('fas', 'cog')
          
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .new-message
            = group.show_last_message