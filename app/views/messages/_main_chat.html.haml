.chat-main
  .chat-main__group-info
    .chat-main__group-name
      = @group.name
      .chat-main__group-name__member-name
        Member :
        - @group.group_users.each do |group_user|
          = group_user.user.name
    .chat-main__edit-btn
      = link_to edit_group_path(@group), class:"chat-main__edit-btn__link" do
        Edit
  .chat-main__message-list
    = render @messages

  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .chat-main__message-form__new-message
        = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
        .chat-main__message-form__new-message__image
          = f.label :image, class: 'image-icon' do
            = icon('fa', 'image')
            = f.file_field :image
      = f.submit 'Send', class: 'submit'